<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>Servlets.TestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddGameServlet</servlet-name>
        <servlet-class>Servlets.AddGameServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EnterGameServlet</servlet-name>
        <servlet-class>Servlets.EnterGameServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GameRoomServlet</servlet-name>
        <servlet-class>Servlets.GameRoomServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/testServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddGameServlet</servlet-name>
        <url-pattern>/addGame</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EnterGameServlet</servlet-name>
        <url-pattern>/enterGame</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GameRoomServlet</servlet-name>
        <url-pattern>/gameRoom</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

</web-app>